<div class="row">
  <div class="col-md-12">
    <h1>Colenso Documents</h1>

    <%= form_tag search_documents_path, method: "get" do %>
      <div class="well">
        <div class="form-group">
          <%= label_tag :q, "Search", class: "sr-only" %>

          <div class="input-group">
            <span class="input-group-btn">
              <button class="btn btn-default" data-toggle="button">NOT</button>
            </span>
            <%= text_field_tag :q, "Nelson", class: "form-control" %>
            <span class="input-group-btn">
              <button class="btn btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Phrase <span class="caret"></span>
              </button>
              <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
                <span class="sr-only">Remove</span>
              </button>
            </span>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :q2, "Search", class: "sr-only" %>

          <p class="text-center">AND</p>

          <div class="input-group">
            <span class="input-group-btn">
              <button class="btn btn-default" data-toggle="button">NOT</button>
            </span>
            <%= text_field_tag :q2, "//title", class: "form-control" %>
            <span class="input-group-btn">
              <button class="btn btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                XPath <span class="caret"></span>
              </button>
              <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
                <span class="sr-only">Remove</span>
              </button>
            </span>
          </div>
        </div>

        <div class="text-center">
          <button class="btn btn-default">AND ...</button>
          <button class="btn btn-default">OR ...</button>
        </div>
      </div>

      <div class="text-center">
        <%= button_tag type: "submit", class: "btn btn-primary btn-lg" do %>
          <span class="glyphicon glyphicon-search" role="presentation" aria-hidden="true"></span> Search
        <% end %>
      </div>
    <% end %>
  </div>
</div>
