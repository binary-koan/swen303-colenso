<div class="row">
  <div class="col-md-12">
    <div class="text-right">
      <button class="btn btn-link query-builder-toggle">
        <span class="glyphicon glyphicon-cog"></span>
        <span class="query-builder-hidden">Show query builder</span>
        <span class="query-builder-shown hidden">Hide query builder</span>
      </button>

      <button class="btn btn-link">
        <span class="glyphicon glyphicon-question-sign"></span> How to search
      </button>
    </div>

    <%= render partial: "simple_search", locals: { query: "", hidden: false } %>
    <%= render partial: "advanced_search", locals: { query_terms: [], hidden: true, editing: true } %>
  </div>
</div>
