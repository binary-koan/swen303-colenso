<div class="row">
  <div class="col-md-12">
    <div class="text-right">
      <%= button_tag type: "button", class: "btn btn-link query-builder-toggle" do %>
        <span class="glyphicon glyphicon-cog"></span>
        <span class="query-builder-hidden">Show query builder</span>
        <span class="query-builder-shown hidden">Hide query builder</span>
      <% end %>

      <%= button_tag type: "button", class: "btn btn-link" do %>
        <span class="glyphicon glyphicon-question-sign"></span> How to search
      <% end %>
    </div>

    <%= render partial: "simple_search", locals: { query: nil, hidden: false, editing: true } %>
    <%= render partial: "advanced_search", locals: { query: nil, hidden: true, editing: true } %>
  </div>
</div>
