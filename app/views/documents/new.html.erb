<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">Upload document</h1>
      </div>

      <%= form_tag documents_path, method: :post, multipart: true, class: "panel-body" do %>
        <div class="form-group">
          <%= label_tag :file_path %>
          <%= text_field_tag :file_path, "", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :file, "TEI data" %>
          <%= file_field_tag :file %>
        </div>

        <%= submit_tag "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
