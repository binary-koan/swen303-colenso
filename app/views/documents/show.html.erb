<div id="document">
  <h1><%= @document.title %></h1>
  <p><%= @document.published_date %></p>
  <p><%= @document.author %></p>

  <p class="text-right">
    <span class="btn-group switch-format">
      <button class="btn btn-default format-html active">Formatted</button>
      <button class="btn btn-default format-tei">Raw TEI</button>
    </span>
    <%= link_to download_document_path(@document.basename), class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-download-alt"></span> Download
    <% end %>
  </p>

  <div class="panel panel-default">
    <div class="panel-body view-document">
      <div class="format-html">
        <%= @document.front_matter %>
        <%= @document.body %>
      </div>
      <div class="format-tei">
        <div id="document_tei">
          <%= @document.raw_xml.force_encoding("utf-8") %>
        </div>
      </div>
    </div>
  </div>
</div>
