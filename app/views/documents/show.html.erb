<div id="document">
  <h1><%= @document.title %></h1>
  <p><%= render partial: "document_info", object: @document %></p>

  <div class="row">
    <div class="col-md-6 col-md-push-6 text-right">
      <%= link_to edit_document_path(@document.basename), class: "btn btn-link" do %>
        <span class="glyphicon glyphicon-pencil"></span> Edit
      <% end %>

      <%= link_to download_document_path(@document.basename), class: "btn btn-link" do %>
        <span class="glyphicon glyphicon-download-alt"></span> Download
      <% end %>
    </div>

    <div class="col-md-6 col-md-pull-6">
      <ul class="nav nav-tabs switch-format">
        <li class="active"><a href="#" class="format-html">Content</a></li>
        <li><a href="#" class="format-tei">TEI</a></li>
      </ul>
    </div>
  </div>

  <div class="panel panel-tab panel-default">
    <div class="panel-body view-document">
      <div class="format-html">
        <%= @document.front_matter %>
        <%= @document.body %>
      </div>
      <div class="format-tei">
        <div id="document_tei"><%= @document.raw_xml.force_encoding("utf-8") %></div>
      </div>
    </div>
  </div>
</div>
