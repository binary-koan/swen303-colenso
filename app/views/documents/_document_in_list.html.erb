<% if document_in_list.folder? %>
  <a href="<%= browse_documents_path(document_in_list.path) %>" class="list-group-item">
    <h4 class="list-group-item-heading">
      <span class="glyphicon glyphicon-folder-close"></span>
      <%= document_in_list.name %>
    </h4>
  </a>
<% else %>
  <a href="<%= document_path(document_in_list.basename) %>" class="list-group-item">
    <h4 class="list-group-item-heading"><%= document_in_list.title %></h4>
    <p class="list-group-item-text"><%= render partial: "document_info", object: document_in_list %></p>
  </a>
<% end %>
