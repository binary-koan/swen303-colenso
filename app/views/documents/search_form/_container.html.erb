<div class="search-container <%= class_name %>">
  <% if editable %>
    <div class="editing-section">
      <%= render partial: "documents/search_form/editor", locals: { query: query } %>
    </div>

    <div class="viewing-section">
      <%= render partial: "documents/search_form/viewer", locals: { query: query, editable: true, deletable: false } %>
    </div>
  <% else %>
    <div class="viewing-section">
      <%= render partial: "documents/search_form/viewer", locals: { query: query, editable: false, deletable: true } %>
    </div>
  <% end %>
</div>
