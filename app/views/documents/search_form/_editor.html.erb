<% simple_search = simple_search?(query) %>

<div class="text-right">
  <%= button_tag type: "button", class: "btn btn-link query-builder-toggle" do %>
    <span class="glyphicon glyphicon-cog"></span>
    <span class="query-builder-hidden <%= "hidden" if !simple_search %>">Show query builder</span>
    <span class="query-builder-shown <%= "hidden" if simple_search %>">Hide query builder</span>
  <% end %>

  <%= button_tag type: "button", class: "btn btn-link" do %>
    <span class="glyphicon glyphicon-question-sign"></span> How to search
  <% end %>
</div>

<%= render partial: "documents/search_form/editor_simple", locals: { query: query, hidden: !simple_search } %>
<%= render partial: "documents/search_form/editor_advanced", locals: { query: query, hidden: simple_search } %>
