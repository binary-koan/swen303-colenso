<div class="input-group search-container">
  <% if simple_search?(query) %>
    <span class="form-control input-lg simple-search-query"><%= simple_text_value(query) %></span>
  <% else %>
    <span class="form-control advanced-search-query"><%= advanced_query_view(query) %></span>
  <% end %>

  <span class="input-group-btn">
    <% if editable %>
      <%= button_tag type: "button", class: "btn btn-default btn-lg edit-query" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit query
      <% end %>

      <%= button_tag type: "button", class: "btn btn-default btn-lg search-within" do %>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Filter these results
      <% end %>
    <% end %>

    <% if deletable %>
      <%= link_to search_path_without_query(query), class: "btn btn-default btn-lg" do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <span class="sr-only">Remove this query</span>
      <% end %>
    <% end %>
  </span>
</div>
