<div class="input-group">
  <%= render partial: "documents/search_form/viewer", locals: { query: query } %>

  <span class="input-group-btn">
    <%= button_tag type: "button", class: "btn btn-default btn-lg start-editing" do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit query
    <% end %>

    <%= button_tag type: "button", class: "btn btn-default btn-lg search-within" do %>
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Filter these results
    <% end %>
  </span>
</div>
